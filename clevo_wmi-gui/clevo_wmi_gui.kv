<MainScreen>
    BoxLayout:
        orientation:"vertical"
        GridLayout:
            cols:3
            Image:
                source:'images/keyboard-left.png'
            Image:
                source:'images/keyboard-middle.png'
            Image:
                source:'images/keyboard-right.png'
            GridLayout:
                cols:2
                Label:
                    text:"Green"
                CheckBox:
                    active: root.hw.getcolor("left").getcomponent("G")
                    on_active:root.color_change("left", "G", *args)
                Label:
                    text:"Red"
                CheckBox
                    active: root.hw.getcolor("left").getcomponent("R")
                    on_active:root.color_change("left", "R", *args)
                Label:
                    text:"Blue"
                CheckBox
                    active: root.hw.getcolor("left").getcomponent("B")
                    on_active:root.color_change("left", "B", *args)

            GridLayout:
                cols:2
                Label:
                    text:"Green"
                CheckBox
                    active: root.hw.getcolor("middle").getcomponent("G")
                    on_active:root.color_change("middle", "G", *args)
                Label:
                    text:"Red"
                CheckBox
                    active: root.hw.getcolor("middle").getcomponent("R")
                    on_active:root.color_change("middle", "R", *args)
                Label:
                    text:"Blue"
                CheckBox
                    active: root.hw.getcolor("middle").getcomponent("B")
                    on_active:root.color_change("middle", "B", *args)

            GridLayout:
                cols:2
                Label:
                    text:"Green"
                CheckBox
                    active: root.hw.getcolor("right").getcomponent("G")
                    on_active:root.color_change("right", "G", *args)
                Label:
                    text:"Red"
                CheckBox
                    active: root.hw.getcolor("right").getcomponent("R")
                    on_active:root.color_change("right", "R", *args)
                Label:
                    text:"Blue"
                CheckBox
                    active: root.hw.getcolor("right").getcomponent("B")
                    on_active:root.color_change("right", "B", *args)

        GridLayout:
            cols:1
            BoxLayout:
                orientation:"horizontal"
                Label:
                    text:"Brightness"
                Slider
                    min:0
                    max:10
                    step: 1
                    value:root.hw.getBrightness()
                    on_value:root.brightness_change(*args)
