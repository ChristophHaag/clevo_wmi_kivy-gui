<MainScreen>
    BoxLayout:
        orientation:"vertical"
        GridLayout:
            cols:3
            Image:
                source:'keyboard-left.png'
            Image:
                source:'keyboard-middle.png'
            Image:
                source:'keyboard-right.png'
            GridLayout:
                cols:2
                Label:
                    text:"Green"
                CheckBox:
                    active:root.currentcolors.leftG
                    whoami:{"area": "left", "color": "G"}
                    on_active:root.color_change(*args)
                Label:
                    text:"Red"
                CheckBox
                    active:root.currentcolors.leftR
                    whoami:{"area": "left", "color": "R"}
                    on_active:root.color_change(*args)
                Label:
                    text:"Blue"
                CheckBox
                    active:root.currentcolors.leftB
                    whoami:{"area": "left", "color": "B"}
                    on_active:root.color_change(*args)

            GridLayout:
                cols:2
                Label:
                    text:"Green"
                CheckBox
                    active:root.currentcolors.middleG
                    whoami:{"area": "middle", "color": "G"}
                    on_active:root.color_change(*args)
                Label:
                    text:"Red"
                CheckBox
                    active:root.currentcolors.middleR
                    whoami:{"area": "middle", "color": "R"}
                    on_active:root.color_change(*args)
                Label:
                    text:"Blue"
                CheckBox
                    active:root.currentcolors.middleB
                    whoami:{"area": "middle", "color": "B"}
                    on_active:root.color_change(*args)

            GridLayout:
                cols:2
                Label:
                    text:"Green"
                CheckBox
                    active:root.currentcolors.rightG
                    whoami:{"area": "right", "color": "G"}
                    on_active:root.color_change(*args)
                Label:
                    text:"Red"
                CheckBox
                    active:root.currentcolors.rightR
                    whoami:{"area": "right", "color": "R"}
                    on_active:root.color_change(*args)
                Label:
                    text:"Blue"
                CheckBox
                    active:root.currentcolors.rightB
                    whoami:{"area": "right", "color": "B"}
                    on_active:root.color_change(*args)

        GridLayout:
            cols:1
            BoxLayout:
                orientation:"horizontal"
                Label:
                    text:"Brightness"
                Slider
                    min:0
                    max:10
                    step: 1
                    value:root.brightness
                    on_value:root.brightness_change(*args)
