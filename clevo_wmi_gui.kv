<MainScreen>
    BoxLayout:
        orientation:"vertical"
        GridLayout:
            cols:3
            Image:
                source:'keyboard-left.png'
            Image:
                source:'keyboard-middle.png'
            Image:
                source:'keyboard-right.png'
            GridLayout:
                cols:2
                Label:
                    text:"Green"
                CheckBox:
                    #active:root.leftG
                    active:root.currentcolors.leftG
                    #active:root.currentcolors.left["G"]
                Label:
                    text:"Red"
                CheckBox
                    #active:root.leftR
                    active:root.currentcolors.leftR
                    #active:root.currentcolors.left["R"]
                Label:
                    text:"Blue"
                CheckBox
                    #active:root.leftB
                    active:root.currentcolors.leftB
                    #active:root.currentcolors.left["B"]

            GridLayout:
                cols:2
                Label:
                    text:"Green"
                CheckBox
                    #active:root.middleG
                    active:root.currentcolors["middleG"]
                Label:
                    text:"Red"
                CheckBox
                    #active:root.middleR
                    active:root.currentcolors["middleR"]
                Label:
                    text:"Blue"
                CheckBox
                    #active:root.middleB
                    active:root.currentcolors["middleB"]

            GridLayout:
                cols:2
                Label:
                    text:"Green"
                CheckBox
                    #active:root.rightG
                    active:root.currentcolors["rightG"]
                Label:
                    text:"Red"
                CheckBox
                    #active:root.rightR
                    active:root.currentcolors["rightR"]
                Label:
                    text:"Blue"
                CheckBox
                    #active:root.rightB
                    active:root.currentcolors["rightB"]


        GridLayout:
            cols:1
            BoxLayout:
                orientation:"horizontal"
                Label:
                    text:"Brightness"
                Slider
                    min:0
                    max:10
                    step: 1
                    value:root.brightness
                    on_value:root.brightness_change(*args)
